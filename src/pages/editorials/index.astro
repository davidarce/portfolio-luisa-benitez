---
import { getCollection } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import Grid from "../../components/Grid.astro";
import Card from "../../components/Card.astro";

const editorials = (await getCollection("editorials")).sort(
    (a, b) => a.data.order - b.data.order,
);
---

<BaseLayout
    title="Editoriales | Luisa Benítez"
    description="Editoriales asistidas por Luisa Benítez"
>
    <div class="stack gap-20 lg:gap-48 px-10">
        <main class="stack gap-20 lg:gap-48">
            <Grid variant="small">
                {
                    editorials.map((editorial) => {
                        const { id, data } = editorial;
                        const {
                            title,
                            img,
                            img_alt,
                            cardSize,
                            aspectRatio,
                            objectPosition,
                        } = data;

                        return (
                            <li>
                                <Card
                                    id={id}
                                    page="editorials"
                                    title={title}
                                    img={img}
                                    img_alt={img_alt}
                                    cardSize={cardSize}
                                    aspectRatio={aspectRatio}
                                    objectPosition={objectPosition}
                                />
                            </li>
                        );
                    })
                }
            </Grid>
        </main>
    </div>
</BaseLayout>
